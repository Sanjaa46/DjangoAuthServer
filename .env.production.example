# Django Configuration
SECRET_KEY=your-production-secret-key-change-this-IMMEDIATELY
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (External MySQL)
DB_NAME=sso_production_db
DB_USER=sso_user
DB_PASSWORD=secure-database-password
DB_HOST=host.docker.internal
DB_PORT=3306

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=secure-redis-password

# SSO Configuration
# Use http://localhost:8000 for local/tunnel access
SSO_ISS=http://localhost:8000
SSO_ACCESS_TOKEN_EXP=900
SSO_REFRESH_TOKEN_EXP=2592000

# Docker Image (for CI/CD)
DOCKER_IMAGE=registry.gitlab.com/your-org/sso-server:latest

# CORS Configuration
# Add your Cloudflare Tunnel domain or application domains here
CORS_ALLOWED_ORIGINS=https://your-app.example.com,http://localhost:8080
